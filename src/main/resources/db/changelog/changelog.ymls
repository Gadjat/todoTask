#file: noinspection YAMLSchemaValidation
databaseChangeLog:

  - changeSet:
      id: 1
      author: Ruslan
      changes:
        - createTable:
            tableName: task
            remarks: task
            columns:
              - column:
                  name: id
                  type: integer
                  autoIncrement: true
                  constraints:
                    primaryKey: true
                    nullable: false
              - column:
                  name: description
                  type: varchar(100)
                  constraints:
                    nullable: false
              - column:
                  name: status
                  type: integer
                  constraints:
                    nullable: false

  - changeSet:
      id: 2
      author: Ruslan
      changes:
        - insert:
            tableName: task
            columns:
              - column:
                  name: id
                  value: 1
              - column:
                  name: description
                  value: aaa
              - column:
                  name: status
                  value: 1
        - insert:
            tableName: task
            columns:
              - column:
                  name: id
                  value: 2
              - column:
                  name: description
                  value: aaa
              - column:
                  name: status
                  value: 2
        - insert:
            tableName: task
            columns:
              - column:
                  name: id
                  value: 3
              - column:
                  name: description
                  value: aaa
              - column:
                  name: status
                  value: 3